		void Button1Click(object sender, EventArgs e)
		{
			string a = Convert.ToString(textBox1.Text);
			string v = a.ToLower();
			
			switch(v) {
				case "a":
                    MessageBox.Show("Vowel");
                    break;
                case "e":
                    MessageBox.Show("Vowel");
                    break;
                case "i":
                    MessageBox.Show("Vowel");
                    break;
                case "o":
                    MessageBox.Show("Vowel");
                    break;
                case "u":
                    MessageBox.Show("Vowel");
                    break;
                case "":
                    MessageBox.Show("Error");
                    break;
                   default:
                    MessageBox.Show("Consonant");
                    break;
			}
		}
	}
}
